from random import randint
rb1 = UsedRobot(1,2,colour="blue")
rb2 = UsedRobot(1,4,colour="green")
rb3 = UsedRobot(1,6,colour="yellow")
while True:
    dem = randint(1,3)
    if dem == 1:
        rb1.move()
    elif dem == 2:
        rb2.move()
    elif dem == 3:
        rb3.move()
    if not rb1.front_is_clear() or not rb2.front_is_clear() or not rb3.front_is_clear():
        break
rb1.turn_off()
rb2.turn_off()
rb3.turn_off()
















